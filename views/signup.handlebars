<div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form" id="signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input form-control" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary form-control" type="submit">signup</button>
      </div>
    </form>
</div>

<script src="/js/signup.js"></script>